{% extends 'layout.njk' %}

{% import "parts/card.njk" as cards%}

{% block content %}

  {% call cards.render('Cadastrar Produto', 'product-create container') %}
    <form action="/products" method="POST" enctype="multipart/form-data">
      <div class="header">
        <h3>Cadastrar Produto {{productId}}</h3>
      </div>

      <div class="fields">
        {% include 'products/fields.njk' %}
      </div>

      <button class="button" type="submit" onclick="Validate.allFields(event)">Salvar</button>

    </form>
  {%endcall%}

{% endblock content %}