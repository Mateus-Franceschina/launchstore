{% extends 'layout.njk' %}

{% import "parts/card.njk" as cards%}

{% block content %}

  {% call cards.render('Esqueceu a senha?', 'password container') %}
    <form action="/users/forgot-password" method="POST">
      <div class="fields">
        <div class="item">
            <div>Email</div>
            <div class="input">
              <input 
                type="email"
                name="email"
                placeholder="Digite o email cadastrado"
                value="{{user.email}}"
                onblur="Validate.apply(this, 'isEmail')"
              >
            </div>
          </div>
      </div>

      <button class="button" type="submit">Recuperar a senha</button>
    </form>
  {%endcall%}

{% endblock content %}